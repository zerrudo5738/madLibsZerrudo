<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66342169"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/noun"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="124dp"
        android:text="Noun:"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Animal:"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verb" />

    <TextView
        android:id="@+id/adjective"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Adjective:"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noun" />

    <TextView
        android:id="@+id/verb"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Verb:"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adjective" />

    <EditText
        android:id="@+id/editAdjective"
        android:layout_width="163dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="11dp"
        android:hint="Enter Text"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/adjective"
        app:layout_constraintTop_toBottomOf="@+id/editNoun" />

    <EditText
        android:id="@+id/editVerb"
        android:layout_width="164dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="13dp"
        android:hint="Enter Text"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/verb"
        app:layout_constraintTop_toBottomOf="@+id/editAdjective" />

    <EditText
        android:id="@+id/editAnimal"
        android:layout_width="164dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:hint="Enter Text"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editVerb" />

    <EditText
        android:id="@+id/editNoun"
        android:layout_width="163dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="122dp"
        android:hint="Enter Text"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/noun"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/custombutton"
        android:fontFamily="monospace"
        android:onClick="sendInfo"
        android:text="Generate Story!"
        android:textColor="#9FC0A0"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-smallcaps"
        android:includeFontPadding="true"
        android:text="Rad Mad Libs"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="148dp"
        android:layout_height="147dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="372dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/george" />

</android.support.constraint.ConstraintLayout>